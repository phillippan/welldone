<?xml version="1.0"?>
<config>
  <sections>
    <ajax_addto>
      <label>Ajax Add To</label>
      <tab>welldone</tab>
      <frontend_type>text</frontend_type>
      <sort_order>10</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <product_btns>
          <label>Product Buttons</label>
          <frontend_type>text</frontend_type>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
              <to_cart>
                  <label>Ajax add to cart</label>
                  <comment>Add to cart without render of the page</comment>
                  <frontend_type>select</frontend_type>
                  <source_model>adminhtml/system_config_source_enabledisable</source_model>
                  <sort_order>10</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
              </to_cart>
              <to_compare>
                  <label>Ajax for add to compare list</label>
                  <frontend_type>select</frontend_type>
                  <source_model>adminhtml/system_config_source_enabledisable</source_model>
                  <sort_order>20</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
              </to_compare>
              <to_wishlist>
                  <label>Ajax for add to wishlist</label>
                  <frontend_type>select</frontend_type>
                  <source_model>adminhtml/system_config_source_enabledisable</source_model>
                  <sort_order>30</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
              </to_wishlist>
          </fields>
        </product_btns>
      </groups>
    </ajax_addto>
  </sections>
</config>