    </adminhtml>
    <global>
        <events>
            <admin_system_config_changed_section_welldone>
                <observers>
                    <mymodule>
                        <type>singleton</type>
                        <class>Etheme_Welldone_Model_Observer</class>
                        <method>saving_welldone</method>
                    </mymodule>
                </observers>
            </admin_system_config_changed_section_welldone>
            <admin_system_config_changed_section_welldonecolors>
                <observers>
                    <mymodule>
                        <type>singleton</type>
                        <class>Etheme_Welldone_Model_Observer</class>
                        <method>saving_welldonecolors</method>
                    </mymodule>
                </observers>
            </admin_system_config_changed_section_welldonecolors>
        </events>
        <models>
            <welldone>
                <class>Etheme_Welldone_Model</class>
            </welldone>
        </models>
        <blocks>
            <welldone>
                <class>Etheme_Welldone_Block</class>
            </welldone>

            <opc>
                <rewrite>
                    <links>Etheme_Welldone_Block_Opc_Links</links>
                </rewrite>
            </opc>
        </blocks>
        <helpers>
            <welldone>
                <class>Etheme_Welldone_Helper</class>
            </welldone>
            <configurableswatches>
                <rewrite>
                    <mediafallback>Etheme_Welldone_Helper_ConfigurableSwatches_Mediafallback</mediafallback>
                </rewrite>
            </configurableswatches>
        </helpers>
        <resources>
            <welldone_setup>
                <setup>
                    <module>Etheme_Welldone</module>
                </setup>
            </welldone_setup>
        </resources>
        <page>
            <layouts>
                <one_column_full_width translate="label">
                    <label>1 column Full Width</label>
                    <template>page/1column_full_width.phtml</template>
                    <layout_handle>page_one_column_full_width</layout_handle>
                </one_column_full_width>
                <!-- add more layouts here -->
            </layouts>
        </page>
    </global>

