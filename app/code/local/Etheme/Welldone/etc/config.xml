<?xml version="1.0"?>
<config>
    <modules>
        <Etheme_Welldone>
            <version>1.0.0</version>
        </Etheme_Welldone>
    </modules>
    <admin>
        <routers>
            <welldone>
                <use>admin</use>
                <args>
                    <module>Etheme_Welldone</module>
                    <frontName>welldone</frontName>
                </args>
            </welldone>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <welldone>
                <title>Welldone v 1.0.0</title>
                <sort_order>10000</sort_order>
                <children>
                    <maintenance>
                        <title>Install</title>
                        <sort_order>0</sort_order>
                        <children>
                            <!--<install>
                                <title>Install Theme</title>
                                <sort_order>1</sort_order>
                                <action>welldone/adminhtml_installtemplate</action>
                            </install>-->
                            <load_preset_configuration>
                                <title>Install Theme</title>
                                <sort_order>2</sort_order>
                                <action>welldone/adminhtml_loadpresetconfig</action>
                            </load_preset_configuration>
                            <!--<save_cur_blocks>
                                <title>Save preset configuration</title>
                                <sort_order>3</sort_order>
                                <action>welldone/adminhtml_saveconfig</action>
                            </save_cur_blocks>-->
                            <reset_cms_blocks>
                                <title>Install/Reset blocks/pages</title>
                                <sort_order>4</sort_order>
                                <action>welldone/adminhtml_resetcmsblocks</action>
                            </reset_cms_blocks>
                        </children>
                    </maintenance>
                    <config>
                        <title>Theme Settings</title>
                        <sort_order>1</sort_order>
                        <action>adminhtml/system_config/edit/section/welldone</action>
                    </config>
                    <colors>
                        <title>Theme Colors</title>
                        <sort_order>2</sort_order>
                        <action>adminhtml/system_config/edit/section/welldonecolors</action>
                    </colors>
                    <layout>
                        <title>Theme Layout</title>
                        <sort_order>3</sort_order>
                        <action>adminhtml/system_config/edit/section/welldonelayout</action>
                    </layout>
                </children>
            </welldone>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <welldone>
                                            <title>Theme Settings</title>
                                        </welldone>
                                        <welldonecolors>
                                            <title>Theme Colors</title>
                                        </welldonecolors>
                                        <welldonelayout>
                                            <title>Theme Layout</title>
                                        </welldonelayout>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <welldone>
                            <title>Welldone</title>
                            <sort_order>10001</sort_order>
                            <children>
                                <maintenance>
                                    <title>Theme Maintenance</title>
                                    <children>
                                        <install>
                                            <title>Install Theme</title>
                                        </install>
                                        <load_preset_configuration>
                                            <title>Load skin</title>
                                        </load_preset_configuration>
                                        <reset_cms_blocks>
                                            <title>Reset CMS blocks/pages to default</title>
                                        </reset_cms_blocks>
                                    </children>
                                </maintenance>
                                <config>
                                    <title>Theme Configuration</title>
                                </config>
                            </children>
                        </welldone>
                    </children>
                </admin>
            </resources>
        </acl>
