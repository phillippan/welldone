<?php
$theme=Mage::helper('welldone');
$prev_next=($theme->getLayoutOption('product/prevnext') && gettype(Mage::registry('current_category'))!='NULL');
?>
<?php if($crumbs && is_array($crumbs)): ?>
<section class="breadcrumbs breadcrumbs-boxed hidden-xs">
    <div class="container">
        <ol class="breadcrumb breadcrumb--wd pull-left">
            <?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
                <li class="<?php echo $_crumbName ?>">
                    <?php if($_crumbInfo['link']): ?>
                        <a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->escapeHtml($_crumbInfo['title']) ?>"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></a>
                    <?php elseif($_crumbInfo['last']): ?>
                        <strong><?php echo $this->escapeHtml($_crumbInfo['label']) ?></strong>
                    <?php else: ?>
                        <?php echo $this->escapeHtml($_crumbInfo['label']) ?>
                    <?php endif; ?>
                    <?php if(!$_crumbInfo['last']): ?>
                    <?php endif; ?>
                </li>
            <?php endforeach; ?>
        </ol>
        <?php if($prev_next)echo $this->getChildHtml('prev_next'); ?>
    </div>
</section>
<?php endif; ?>
