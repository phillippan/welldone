/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
    <a href="#" class="btn dropdown-toggle btn--links--dropdown header__dropdowns__button" data-toggle="dropdown"><span class="header__dropdowns__button__symbol"><?php echo Mage::app()->getLocale()->currency(Mage::app()->getStore()->getCurrentCurrencyCode())->getSymbol() ?></span></a>
    <ul class="dropdown-menu animated fadeIn" role="menu">
        <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
            <li  class="currency__item <?php if(Mage::app()->getStore()->getCurrentCurrencyCode()==$_code) echo'currency__item--active'?>"> <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo Mage::app()->getLocale()->currency($_code)->getSymbol() ?>&nbsp;<?php echo $_name ?></a> </li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>
