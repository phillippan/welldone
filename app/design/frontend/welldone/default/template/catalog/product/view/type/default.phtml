<?php /* @var $this Mage_Catalog_Block_Product_View_Abstract */?>
<?php
$_product = $this->getProduct();
$theme=Mage::helper('welldone');
$sku=$theme->getLayoutOption('product/sku');
?>
<div class="product-info__sku pull-right">
    <?php if ($sku): ?>
    <?php echo $this->__('SKU') ?>: <?php echo nl2br($_product->getSku()) ?> &nbsp;&nbsp;
    <?php endif; ?>
    <?php if ($this->displayProductStockStatus()): ?>
        <?php if ($_product->isAvailable()): ?>
            <span class="label label-success"><?php echo $this->__('IN STOCK') ?></span>
        <?php else: ?>
            <span class="label label-danger"><?php echo $this->__('OUT OF STOCK') ?></span>
        <?php endif; ?>
    <?php endif; ?>
</div>
<?php echo $this->getPriceHtml($_product) ?>
<?php echo $this->getChildHtml('product_type_data_extra') ?>