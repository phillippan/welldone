<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($_product->isSaleable()): ?>
    <?php if(!$_product->isGrouped()): ?><label><?php echo $this->__('Quantity') ?>:</label><?php endif; ?>
    <div class="outer">
        <?php if(!$_product->isGrouped()): ?>
        <div class="input-group-qty pull-left"> <span class="pull-left"> </span>
            <input type="text" name="qty" id="qty"  value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Qty')) ?>" class="input-number input--wd input-qty pull-left"  min="1" max="100">
            <span class="pull-left btn-number-container">
                <button type="button" class="btn btn-number btn-number--plus" data-type="plus" data-field="quant[1]"> + </button>
                <button type="button" class="btn btn-number btn-number--minus" disabled="disabled" data-type="minus" data-field="quant[1]"> &#8211; </button>
            </span>
        </div>
        <?php endif; ?>
        <div class="pull-left">
            <a class="btn btn--wd text-uppercase add-to-cart-btn-<?php echo $_product->getId()?>"  title="<?php echo $buttonTitle ?>" id="product-addtocart-button"  onclick="productAddToCartForm.submit(this)"><?php echo $buttonTitle ?></a>
        </div>
    </div>
<?php endif; ?>


