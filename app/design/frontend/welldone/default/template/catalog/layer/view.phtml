/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php $theme=Mage::helper('welldone');?>
<?php if($this->canShowBlock()): ?>
    <div class="block-layered-nav <?php if(!Mage::getStoreConfig('ajax_shop/ajax_conf/layered')):?>not_ajax<?php endif;?>">
    <?php echo $this->getStateHtml() ?>
    <?php if ($this->getLayer()->getState()->getFilters()): ?>
        <br />
        <a href="<?php echo $this->getClearUrl() ?>" class="button"><?php echo $this->__('Clear All') ?></a>
        <br />
        <br />
    <?php endif; ?>
    <?php if($this->canShowOptions()): ?>
        <?php $_filters = $this->getFilters() ?>
        <?php foreach ($_filters as $_filter): ?>
        <?php if($_filter->getItemsCount()): ?>
        <div class="filters-col__collapse <?php if($theme->getLayoutOption('general/attr_groups')=='opened'):?>open<?php endif;?> filter<?php echo $_filter->getName()?>">
            <h4 class="filters-col__collapse__title text-uppercase"><?php echo $this->__($_filter->getName()) ?></h4>
            <div class="filters-col__collapse__content">
            <?php echo $_filter->getHtml() ?>
            </div>
        </div>
        <?php endif; ?>
        <?php endforeach; ?>
    <?php endif; ?>
    </div>
<?php endif; ?>